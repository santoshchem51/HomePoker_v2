# Environment Configuration Example
# Copy this to .env for local development

# Database Configuration
DATABASE_NAME=pokepot.db
DATABASE_LOCATION=default

# Logging Configuration
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGS=true

# Development Settings
ENABLE_HOT_RELOAD=true
ENABLE_FAST_REFRESH=true
ENABLE_DEBUG_OVERLAY=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
STARTUP_TIME_THRESHOLD=3000
MEMORY_WARNING_THRESHOLD=150

# Testing Configuration
TEST_DATABASE_NAME=pokepot_test.db
MOCK_EXTERNAL_SERVICES=true

# Build Configuration
BUNDLE_SIZE_LIMIT=52428800
BUILD_TARGET=development

# Security Settings (Development Only)
ENABLE_DEV_MENU=true
ALLOW_HTTP_TRAFFIC=false
ENABLE_NETWORK_INSPECTOR=true